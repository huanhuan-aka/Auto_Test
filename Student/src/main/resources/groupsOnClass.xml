<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="suitename">
    <test name="runAll">
        <classes>
            <class name="com.course.testng.group.GroupsOnClass1"/>
            <class name="com.course.testng.group.GroupsOnClass2"/>
            <class name="com.course.testng.group.GroupsOnClass3"/>
        </classes>
    </test>
    <test name="onlyStu">
        <groups>
            <run>
                <!-- include标签中的name属性取值是测试类上面的Test中groups的值-->
                <include name="stu"/>
            </run>
        </groups>
        <classes>
            <class name="com.course.testng.group.GroupsOnClass1"/>
            <class name="com.course.testng.group.GroupsOnClass2"/>
            <class name="com.course.testng.group.GroupsOnClass3"/>
        </classes>
    </test>
</suite>